<% if notice %>
  <div class="alert alert-info" role="alert">
    <%= notice%>
  </div>
<%end%>

<%= react_component("ListName")%>
<%= react_component("DropDown")%>

<br/>

<table class="table table-striped table-hover">
  <thead class="thead-light">
    <tr>
      <th>Date (YY/MM/DD)</th>
      <th>Time</th>
      <th>Title</th>
      <th>Details</th>
      <th>Tag</th>
      <th>Done?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.Date.strftime("%d/%m/%Y") %></td>
        <td><%= item.Time.strftime("%k:%M") %></td>
        <td><%= link_to item.Title, item %></td>
        <td><%= item.Details %></td>
        <td><%= link_to item.Tag, items_path(Tag:item.Tag) %></td>
        <td><%= item.Done%></td>
        <td><%= link_to 'Edit', edit_item_path(item), class:"btn btn-outline-success" %></td>
        <td><%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-outline-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= react_component("NewItem")%>